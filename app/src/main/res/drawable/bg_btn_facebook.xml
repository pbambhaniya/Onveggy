<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape>
            <gradient
                android:angle="0"
                android:endColor="#cbe0fb"
                android:startColor="#d1daeb"
                android:type="linear" />
            <corners android:radius="90dp" />
        </shape>
    </item>
    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape>

            <gradient
                android:angle="0"
                android:endColor="#3e66ac"
                android:startColor="#0b72f3"
                android:type="linear" />

            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <corners android:radius="90dp" />
        </shape>
    </item>
</layer-list>