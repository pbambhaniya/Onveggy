<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_setting"
    tools:context=".Activity.ContactusFAQActivity">

    <RelativeLayout
        android:id="@+id/rel_header"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Contact us"
            android:textColor="@color/green_type"
            android:textSize="22dp" />

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/card_title_faq"
        android:layout_below="@+id/rel_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:layout_marginTop="8dp"
        android:elevation="30dp">

        <TextView
            android:id="@+id/txt_title_faq"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="FAQs"
            android:textColor="@color/blue_type"
            android:textSize="16dp"
            android:textStyle="normal"
            android:layout_marginLeft="20dp"/>

    </android.support.v7.widget.CardView>

    <ExpandableListView
        android:id="@+id/expand_list_faq"
        android:layout_marginLeft="-24dp"
        android:layout_below="@+id/card_title_faq"
        android:layout_width="match_parent"
        android:indicatorLeft="340dp"
        android:indicatorRight="390dp"
        android:groupIndicator="@drawable/custom_expandable"
        android:layout_marginBottom="10dp"
        android:divider="@color/light_green"
        android:dividerHeight="1dp"
        android:layout_height="wrap_content">

    </ExpandableListView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_order"
        android:layout_below="@+id/expand_list_faq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:layout_marginTop="8dp"
        android:elevation="30dp">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Placing an order"
            android:textColor="@color/blue_type"
            android:textSize="20dp"
            android:textStyle="normal"
            android:layout_marginLeft="20dp"/>

    </android.support.v7.widget.CardView>

    <ExpandableListView
        android:id="@+id/expand_list_order"
        android:layout_below="@+id/card_order"
        android:layout_above="@+id/btn_add_Address"
        android:layout_width="match_parent"
        android:indicatorLeft="340dp"
        android:indicatorRight="390dp"
        android:layout_marginLeft="-24dp"
        android:groupIndicator="@drawable/custom_expandable"
        android:layout_marginBottom="10dp"
        android:divider="@color/light_green"
        android:dividerHeight="1dp"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/btn_contact_faq"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bg_btn">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Still need help? Write to us"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="normal" />

    </RelativeLayout>


</RelativeLayout>

