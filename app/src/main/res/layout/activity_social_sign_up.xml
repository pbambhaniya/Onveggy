<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_signin"
    tools:context="com.multipz.onveggy.Activity.SocialSignUpActivity">

    <RelativeLayout
        android:id="@+id/rel_header"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_back" />

    </RelativeLayout>

    <TextView
        android:id="@+id/txt_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rel_header"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="SIGN UP"
        android:textColor="@color/green"
        android:textSize="35dp" />

    <View
        android:id="@+id/v1"
        android:layout_width="110dp"
        android:layout_height="0.9dp"
        android:layout_below="@id/txt_sign_up"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_gradient" />


    <TextView
        android:id="@+id/txt_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/v1"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="@string/signin_text"
        android:textSize="18dp" />

    <RelativeLayout
        android:id="@+id/rel_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/rel_gmail"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/bg_btn">

        <ImageView
            android:id="@+id/img_email"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="66dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="66dp"
            android:padding="5dp"
            android:src="@drawable/ic_email" />

        <View
            android:id="@+id/v2"
            style="@style/social_divider"
            android:layout_toRightOf="@+id/img_email"
            android:background="#5cb7b2" />

        <TextView
            android:id="@+id/txt_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/v2"
            android:gravity="center"
            android:text="Email"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_gmail"
        android:layout_above="@+id/rel_facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/bg_btn_gmail"
            android:visibility="visible">

            <ImageView
                android:id="@+id/img_gmail"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="66dp"
                android:layout_marginStart="66dp"
                android:gravity="center"
                android:padding="3dp"
                android:src="@drawable/ic_google" />

            <View
                android:id="@+id/v3"
                style="@style/social_divider"
                android:layout_toRightOf="@+id/img_gmail"
                android:background="#e86132" />

            <TextView
                android:id="@+id/txt_gmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@+id/v3"
                android:gravity="center"
                android:text="Google"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <com.google.android.gms.common.SignInButton
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:visibility="gone"></com.google.android.gms.common.SignInButton>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_facebook"
        android:layout_above="@+id/txt_alredy_acc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/bg_btn_facebook"
            android:visibility="visible">

            <ImageView
                android:id="@+id/img_facebook"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="66dp"
                android:layout_marginStart="66dp"
                android:gravity="center"
                android:padding="5dp"
                android:src="@drawable/ic_facebook" />
            e86132

            <View
                android:id="@+id/v4"
                style="@style/social_divider"
                android:layout_toRightOf="@+id/img_facebook"
                android:background="#488be4" />

            <TextView
                android:id="@+id/txt_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@+id/v4"
                android:gravity="center"
                android:text="Facebook"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <com.facebook.login.widget.LoginButton
            android:id="@+id/fb_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:visibility="gone" />

    </RelativeLayout>

    <TextView
        android:id="@+id/txt_alredy_acc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="@string/txt_already_name"
        android:textColor="@color/blue_type"
        android:textSize="16dp"
        android:textStyle="bold" />


</RelativeLayout>
